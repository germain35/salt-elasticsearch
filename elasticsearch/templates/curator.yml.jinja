{%- from "elasticsearch/map.jinja" import elasticsearch with context -%}
---
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"
client:
  hosts: {{ elasticsearch.curator.config.client.hosts|yaml }}
  port: {{ elasticsearch.curator.config.client.port }}
  url_prefix:
  use_ssl: False
  certificate:
  client_cert:
  client_key:
  aws_key:
  aws_secret_key:
  aws_region:
  ssl_no_validate: False
  http_auth:
  timeout: {{ elasticsearch.curator.config.client.timeout }}
  master_only: {{ elasticsearch.curator.config.client.master_only|lower }}

logging:
  loglevel: {{ elasticsearch.curator.config.logging.loglevel }}
  logfile: {{ elasticsearch.curator.config.logging.logfile|default('') }}
  logformat: {{ elasticsearch.curator.config.logging.logformat }}